# =============================================================================
# AI Chat Hub Environment Variables
# =============================================================================

# App URL (for Stripe redirects)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# =============================================================================
# Supabase
# =============================================================================
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=
SUPABASE_SERVICE_ROLE_KEY=

# =============================================================================
# AI APIs
# =============================================================================

# OpenAI (GPT-4o-mini, GPT-4o)
OPENAI_API_KEY=

# Google (Gemini 2.5 Flash)
GOOGLE_GEMINI_API_KEY=

# DeepSeek (DeepSeek V3)
DEEPSEEK_API_KEY=

# Mistral (Mistral Small 3, Mistral Medium 3)
MISTRAL_API_KEY=

# Anthropic (Claude Haiku 3.5, Claude Sonnet 4.5)
ANTHROPIC_API_KEY=

# =============================================================================
# Stripe (Payment)
# =============================================================================
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# Stripe Price IDs (create in Stripe Dashboard)
# Subscription prices
STRIPE_PRICE_LIGHT_MONTHLY=price_light_monthly
STRIPE_PRICE_LIGHT_YEARLY=price_light_yearly
STRIPE_PRICE_PRO_MONTHLY=price_pro_monthly
STRIPE_PRICE_PRO_YEARLY=price_pro_yearly

# Credit purchase prices
STRIPE_PRICE_CREDITS_LIGHT=price_credits_light
STRIPE_PRICE_CREDITS_PRO=price_credits_pro

# =============================================================================
# Email
# =============================================================================

# Resend
RESEND_API_KEY=

# SMTP (Gmail recommended for MVP)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=465
# SMTP_USER=your_gmail_address
# SMTP_PASS=your_gmail_app_password
# SMTP_FROM="AI Chat Hub <your_gmail_address>"
SMTP_HOST=
SMTP_PORT=
SMTP_USER=
SMTP_PASS=
SMTP_FROM=

# =============================================================================
# Other Settings
# =============================================================================

# Model switch context
# Controls how many recent turns are reinforced when switching AI models.
# Recommended range: 2-4. Default: 3.
MODEL_SWITCH_CONTEXT_TURNS=3
